<ul class="no-bullet submenu" id="filter-subnav">
  <li class="sr-only"><%= t("#{i18n_namespace}.filter") %>: </li>
  <% @valid_filters.each do |filter| %>
    <% if @current_filter == filter %>
      <li class="inline-block"><span class=""><%= t("#{i18n_namespace}.filters.#{filter}") %></span></li>
    <% else %>
      <li class="inline-block"><span class=""><%= link_to t("#{i18n_namespace}.filters.#{filter}"),
        current_path_with_query_params(filter: filter, page: 1) %></span></li>
    <% end %>
  <% end %>
</ul>
