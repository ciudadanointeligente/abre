<div class="grid-container">
  <h1>Desafíos</h1>
  <div class="text-right">
    <ul class="menu">
      <!-- TODO que estos checkbox funcionen -->
      <% @active_filters.each do |filter| %>
          <li class="checkbox">
            <% if @current_filter == filter %>
              <%= link_to(current_path_with_query_params(filter: filter, page: 1)) do %>
              <label><input type="checkbox" checked=1><%= t("problems.index.filters.#{filter}") %></label>
            <% end %>
          </li>
          <li class="checkbox">
            <% else %>
              <%= link_to(current_path_with_query_params(filter: filter, page: 1)) do %>
              <label><input type="checkbox"> <%= t("problems.index.filters.#{filter}") %> </label>
            <% end %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
  <div class="bg-light-gray padding-small challenges-menu">
    <div class="grid-x">
        <div class="cell small-12 medium-6 large-6">
            <div class="grid-x grid-padding-x">
              <div class="cell small-4">
                <label for="right-label" class="text-right">Filtrar por</label>
              </div>
              <div class="cell small-8">
                <!-- TODO filtro por etapa -->
                <select>
                  <% @status_filters.each do |filter| %>
                    <option value="/implementation"> <%= filter %> </option>
                  <% end %>
                </select>
              </div>
            </div>
        </div>
        <div class="cell small-12 medium-6 large-6">
            <div class="grid-x grid-padding-x">
              <div class="cell small-4">
                <label for="right-label" class="text-right">Filtrar por</label>
              </div>
              <div class="cell small-8">
                <!-- TODO filtro por comunidad afectada -->
                <select>
                  <option value="husker">Comunidad afectada</option>
                  <option value="husker">Levantamiento Propuestas</option>
                  <option value="starbuck">Talleres de diseño</option>
                  <option value="hotdog">Implementación</option>
                  <option value="apollo">Evaluación</option>
                </select>
              </div>
            </div>
        </div>
    </div>
  </div>
  <div class="grid-x challenges">
    <% @problems.each_with_index do |problem, index| %>
      <% if (index)%2==0 %>
    </div><div class="grid-x">
      <% end %>
      <%= render "problem", problem: problem %>
    <% end %>
  </div>
</div>
