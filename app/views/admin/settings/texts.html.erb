<h2><%= t("admin.settings.index.title_texts") %></h2>

<h3><%= t("admin.settings.index.home") %></h3>
<p><%= t("admin.settings.index.home_subtitle") %></p>

<table>
  <tbody>
    <% @home.each do |h| %>
      <tr>
        <td class="small-12 medium-4">
          <strong><%= t("settings.#{h.key}") %></strong>
        </td>
        <td class="small-12 medium-8">
          <%= form_for(h, url: admin_setting_path(h), html: { id: "edit_#{dom_id(h)}"}) do |f| %>
            <div class="small-12 medium-6 large-9 column">
              <%= f.text_area :value, label: false, id: dom_id(h), lines: 1 %>
            </div>
            <div class="small-12 medium-6 large-3 column">
              <%= f.submit(t('admin.settings.index.update_setting'), class: "button hollow expanded") %>
            </div>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
