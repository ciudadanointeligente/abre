<div class="grid-container">

  <%= render "shared/problem", problem: @problem, header: "header03.png" %>

  <br>

  <h2 class="text-left"> Formulario de Evaluación <span class="float-right"> 1/3 </span> </h2>

  <br>


  <div class="callout large">

    <%= simple_form_for @evaluation, url: wizard_path do |f| %>

    <h5>Selecciona las etapas del desafío "<%= @problem.title %>" en las que participaste:</h5>

    <br>
    <div class="row">
      <div class="small-12 medium-12 column">
        <%= f.input :proposal_participation %>
      </div>
    </div>

    <div class="row">
      <div class="small-12 medium-12 column">
        <%= f.input :proposal_web_participation %>
      </div>
    </div>

    <div class="row">
      <div class="small-12 medium-12 column">
        <%= f.input :design_participation %>
      </div>
    </div>

    <div class="row">
      <div class="small-12 medium-12 column">
        <%= f.input :design_participation_2 %>
      </div>
    </div>

    <div class="row">
      <div class="small-12 medium-12 column">
        <%= f.input :implementation_participation %>
      </div>
    </div>

    <div class="row">
      <div class="small-12 medium-12 column">
        <%= f.input :implementation_participation_2 %>
      </div>
    </div>

    <%= f.hidden_field :project_id, :value => @problem.project.id %>

    <%= hidden_field_tag 'evaluation_id', @evaluation.id %>
    <%= hidden_field_tag 'problem_id', @problem.id %>
    <%= hidden_field_tag 'project_id', @problem.id %>

    <div class="row">
      <div class="small-12 medium-12 column text-right">
        <%= f.submit "Siguiente",
                     class: "button" %> <i class="fas fa-arrow-right"></i>
      </div>
    </div>

  <% end %>
</div>

</div>
