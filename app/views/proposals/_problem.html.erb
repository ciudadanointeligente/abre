<div id="next-voting" class="row bg-orange padding collapse">
  <%= link_to problem_path(problem) do %>
    <div class="small-12 column padding">
      <div class="small white">DESAF√çO</div>
      <h4 class="white"><%= problem.title %></h4>
      <p class="white"><%= problem.summary %></p>
      <p class="white"><%= problem.call_to_action %></p>
      <div class="row">
      <div class="small-12 medium-4 column">
        <% if problem.budget? %>
          <p class='problem-budget p-small white'><%= t('activerecord.attributes.problem.budget')%>: <%= problem.budget %></p>
        <% end %>
      </div>
      <div class="small-12 medium-8 column">
        <div class="row ">
          <div class="small-12 medium-8 column">
            <p class="text-right p-small white"> <%= t("proposals.index.remaining_time", days: distance_of_time_in_words(Problem.last.ends_at, Date.today)) %> </p>
          </div>
        </div>
      </div>
      <div class="pull-right">
        <%= link_to t("proposals.index.start_proposal"), new_proposal_path, class: 'button button-proposal p-small' %>
      </div>
    </div>
    </div>
  <% end %>
</div>
