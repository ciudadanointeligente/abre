<div class="row">
  <div id="next-voting" class="bg-orange padding collapse small-12 medium-10 large-9 columns">
        <div class="small white">DESAFÍO</div>
        <%= link_to problem_path(problem) do %>
          <h4 class="white"><%= problem.title %></h4>
        <% end %>
        <p class="white"><%= problem.summary %> <%= problem.call_to_action %></p>
        <% if problem.ends_at > Date.today%>
        <%= link_to t("proposals.index.start_proposal"), new_proposal_path, class: 'button hollow primary' %>
        <% end %>
  </div>
</div>
<div class="row">
  <div class="small-12 medium-offset-7 medium-5 large-offset-8 large-4 columns bg-gray padding overlap white text-right">
    <% if problem.ends_at > Date.today%>
      <span><%= t("proposals.index.remaining_time_1") %> <span class="counter-bg"><%= distance_of_time_in_days(problem.ends_at, Date.today) %></span> <%= t("proposals.index.remaining_time_2") %>
    <% else %>
      Proceso de recepción de propuestas cerrado
    <% end %>
  </div>
</div>
