<div class="row">
  <div id="next-voting" class="bg-orange padding collapse small-12 medium-10 large-9 columns">
        <div class="small white">DESAFÍO</div>
        <%= link_to problem_path(problem) do %>
          <h4 class="white"><%= problem.title %></h4>
        <% end %>
        <p class="white"><%= problem.summary %> <%= problem.call_to_action %></p>
  </div>
</div>
<div class="row">
  <div class="small-12 medium-offset-7 medium-5 large-offset-7 large-5 columns bg-gray padding overlap white">
    <span>Quedan <span class="counter-bg"><%= t("proposals.index.remaining_time", days: distance_of_time_in_days(Problem.last.ends_at, Date.today)) %></span> días para crear y apoyar propuestas <%= link_to t("proposals.index.start_proposal"), new_proposal_path, class: 'button hollow primary' %>
  </div>
</div>
