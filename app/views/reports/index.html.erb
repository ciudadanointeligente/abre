<!-- Breadcrumbs -->
<div class="grid-container fluid">
  <nav aria-label="Aquí estás:" role="navigation">
    <ul class="breadcrumbs">
      <li><%= link_to "Inicio", root_path %></li>
      <li><%= link_to "Desafíos", problems_path %></li>
      <li><span class="disabled">Desafío:</span> <%= link_to @problem.title, proposals_path(:challenge => @problem.id) %></a></li>
      <li>Seguimiento</li>
    </ul>
  </nav>
</div>
<!-- End breadcrumbs -->
<section class="page-section">
  <div class="grid-container">
    <div class="grid-x">
    <%= render "shared/problem", problem: @problem %>
      <div class="small-12 medium-12 cell">
        <p class="mb-0">
          <% unless @project.implementation_starts_at.nil? %>
            <i class="fa fa-calendar"> </i> Fecha inicio: <%= @project.implementation_starts_at %>
          <% end %>
          <% unless @project.implementation_ends_at.nil? %>
            <span class="line-text">|</span> <i class="fa fa-calendar"> </i> Fecha término: <%= @project.implementation_ends_at %>
          <% end %>
          <% unless @project.responsible_neighbour_name.nil? || @project.responsible_neighbour_name.empty? %>
            <span class="line-text">|</span> <i class="fa fa-calendar"> </i> Encargado vecinal: <%= @project.responsible_neighbour_name %><a href="mailto:<%= @project.responsible_neighbour_mail %>"> (contactar)</a>
          <% end %>
          <hr>
        </p>

        <% @reports.each do |report| %>
          <h4 class="small blue"> Reporte <%= report.created_at.strftime("%d.%m.%Y") %> </h4>
          <p> <%= report.description %></p>
          <div class="gallery row">
            <% report.pictures.each do |pic| %>
              <% if pic.image.exists?  %>
                <div class="small-12 medium-4 column">
                  <%= image_tag pic.image.url(:big) %>
                </div>
              <% end %>
            <% end %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</section>
